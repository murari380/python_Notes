
# Book Class

class Book:
    def __init__(self, title, author, is_borrowed=False):
        self.title = title
        self.author = author
        self.is_borrowed = is_borrowed

    def __str__(self):
        status = "Borrowed" if self.is_borrowed else "Available"
        return f"{self.title} by {self.author} - {status}"


# Library Class
class Library:
    def __init__(self, filename="library.txt"):
        self.filename = filename
        self.books = []
        self.load_books()

    # Load books from file
    def load_books(self):
        try:
            with open(self.filename, "r") as file:
                for line in file:
                    title, author, borrowed = line.strip().split("|")
                    self.books.append(Book(title, author, borrowed == "True"))
        except FileNotFoundError:
            self.books = []  # File not found, start empty
        except Exception as e:
            print("Error loading books:", e)
            self.books = []

    # Save books to file
    def save_books(self):
        try:
            with open(self.filename, "w") as file:
                for book in self.books:
                    file.write(f"{book.title}|{book.author}|{book.is_borrowed}\n")
        except Exception as e:
            print("Error saving books:", e)

    # Add a new book
    def add_book(self, title, author):
        self.books.append(Book(title, author))
        self.save_books()
        print(f'Book "{title}" by {author} added successfully.')

    # Show all books
    def show_books(self):
        if not self.books:
            print("No books in library.")
            return
        for idx, book in enumerate(self.books, 1):
            print(f"{idx}. {book}")

    # Issue a book
    def issue_book(self, title):
        for book in self.books:
            if book.title.lower() == title.lower():
                if book.is_borrowed:
                    print(f'The book "{title}" is already borrowed.')
                else:
                    book.is_borrowed = True
                    self.save_books()
                    print(f'Book "{title}" has been issued.')
                return
        print(f'Book "{title}" not found.')

    # Return a book
    def return_book(self, title):
        for book in self.books:
            if book.title.lower() == title.lower():
                if not book.is_borrowed:
                    print(f'The book "{title}" was not borrowed.')
                else:
                    book.is_borrowed = False
                    self.save_books()
                    print(f'Book "{title}" has been returned.')
                return
        print(f'Book "{title}" not found.')

    # Remove a book
    def remove_book(self, title):
        for book in self.books:
            if book.title.lower() == title.lower():
                self.books.remove(book)
                self.save_books()
                print(f'Book "{title}" removed from library.')
                return
        print(f'Book "{title}" not found.')



# Main Program
def main():
    library = Library()

    while True:
        print("\n--- Library Menu ---")
        print("1. Add Book")
        print("2. Show All Books")
        print("3. Issue Book")
        print("4. Return Book")
        print("5. Remove Book")
        print("6. Exit")

        choice = input("Enter your choice: ")

        if choice == "1":
            title = input("Enter book title: ")
            author = input("Enter author name: ")
            library.add_book(title, author)
        elif choice == "2":
            library.show_books()
        elif choice == "3":
            title = input("Enter book title to issue: ")
            library.issue_book(title)
        elif choice == "4":
            title = input("Enter book title to return: ")
            library.return_book(title)
        elif choice == "5":
            title = input("Enter book title to remove: ")
            library.remove_book(title)
        elif choice == "6":
            print("Exiting... Goodbye!")
            break
        else:
            print("Invalid choice! Please try again.")


if __name__ == "__main__":
    main()


